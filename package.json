{
  "name": "compound-v2",
  "version": "1.0.0",
  "repository": "https://github.com/compound-finance/compound-v2-subgraph",
  "license": "MIT",
  "scripts": {
    "prepublish": "rimraf build src/types",
    "build:codegen": "graph codegen --output-dir src/types/ subgraph.${NETWORK:-mainnet}.yaml",
    "build:subgraph": "graph build subgraph.${NETWORK:-mainnet}.yaml",
    "build": "npm run build:codegen && npm run build:subgraph",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ amxx/compound-v2${NETWORK:+-$NETWORK} subgraph.${NETWORK:-mainnet}.yaml",
    "prettier": "./node_modules/.bin/prettier â€”-write '**/*.ts'"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.20.0",
    "@graphprotocol/graph-ts": "^0.20.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ]
  }
}
